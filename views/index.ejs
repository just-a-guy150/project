<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') %>

    <body>
        <%- include('header.ejs') %>
            <div class="wrapper">
                <% products.forEach(product=> { %>
                    <a href="/post/<%= product.id %>"> 
                        <div class="ad">
                            <img src="/uploads/<%= product.image[0] %>" alt="">
                            <h2>
                                <%= product.title %>
                            </h2>
                            <p>
                                <%= product.description %>
                            </p>
                        </div>
                    </a>
                    <% }) %>
            </div>
            <%- include('modal.ejs') %>
                <button id="add">+</button>
                <%- include('footer.ejs') %>
    </body>

</html>